<header>
	<nav class="be-red white large-padding">
		<ul class="no-list row center-xs middle-xs">
			<li type="none" class="col-md"><hi class="no-margin" id="logo"><%= link_to "BlogFacilito", root_path %></hi></li>
			<li type="none" class="col-md"><%= link_to "Articulos", articles_path %></li>
			<% @categories.each do |category| %>
				<li class="col-md">
					<%= link_to category.name, category%>
				</li>
			<% end %>
			<% if user_signed_in? %>
				<li type="none" class="col-md">
					<%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %>
				</li>
			<% else %>
				<li type="none" class="col-md">
					<%= link_to "Iniciar sesión", new_user_session_path %>
				</li>
				<li type="none" class="col-md">
					<%= link_to "Crear cuenta", new_user_registration_path %>
				</li>
			<% end %>
		</ul>
	</nav>
</header>